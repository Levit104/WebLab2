<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>form-result</servlet-name>
        <jsp-file>/WEB-INF/jsp/form-result.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>form-error</servlet-name>
        <jsp-file>/WEB-INF/jsp/form-error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/main</url-pattern>
        <url-pattern/>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>form-result</servlet-name>
        <url-pattern>/form-result</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>form-error</servlet-name>
        <url-pattern>/form-error</url-pattern>
    </servlet-mapping>
</web-app>